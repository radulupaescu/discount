{
  "name"             : "codesamples/discount",
  "description"      : "Discount service sample",
  "keywords"         : [
    "Discount",
    "Services",
    "Samples"
  ],
  "license"          : "MIT",
  "authors"          : [
    {
      "name" : "Radu Lupaescu",
      "email": "radu.lupaescu@gmail.com"
    }
  ],
  "type"             : "project",
  "require"          : {
    "php"                          : ">=7.1.3",
    "laravel/lumen-framework"      : "5.7.*",
    "vlucas/phpdotenv"             : "~2.2",
    "davidhoeck/laravel-jsonmapper": "^1.0.0"
  },
  "require-dev"      : {
    "fzaninotto/faker": "~1.4",
    "phpunit/phpunit" : "~7.0",
    "mockery/mockery" : "~1.0"
  },
  "autoload"         : {
    "classmap": [],
    "psr-4"   : {
      "App\\": "app/"
    }
  },
  "autoload-dev"     : {
    "classmap": [
      "tests/"
    ]
  },
  "scripts"          : {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "config"           : {
    "preferred-install"  : "dist",
    "sort-packages"      : true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable"    : true
}
